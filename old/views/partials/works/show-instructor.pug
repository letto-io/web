doctype html
div(ng-include="'partials/works/show-menu.html'")

main
	#hidden-link
	oddin-preloader(load-var="load" side-bar="true")
	.container
		p.empty-message.center-align(ng-if="submissions.length == 0") Nenhum trabalho foi postado
		.card.custom-card(ng-repeat="submission in submissions | orderBy: 'created_at'")
			.card-content
				.custom-card__header
					span.title {{submission.person.name}}
					span.datahora {{submission.created_at | date:"dd/MM/yyyy Ã 's' HH:mm"}}
				p {{submission.text}}
			.card-action.custom-card__action
				.row
					.col.m6
						.card-attachment.attachment-unique(ng-if="submission.materials[0]")
							p Baixar trabalho:&nbsp
							a(href="" ng-click="downloadSubmission(submission)")
								span.card-filename {{submission.materials[0].name}}
