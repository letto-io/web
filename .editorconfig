[*.{html, ejs}]
indent_style = space
indent_size = 2

[*.{scss, css}]
indent_style = space
indent_size = 2

[*.{js}]
indent_style = space
indent_size = 2

[*.{json, yml}]
indent_style = space
indent_size = 2
