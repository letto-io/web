<!DOCTYPE html>
<html ng-app="oddin-auth">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <title>Oddin</title>

    <link rel="stylesheet" href="http://fonts.googleapis.com/icon?family=Material+Icons"/>
    <link rel="stylesheet" href="../css/materialize_custom.min.css"/>
    <link rel="stylesheet" href="../css/login_style.min.css"/>
    <link rel="shortcut icon" href="../img/oddin_favicon.png" type="image/x-icon"/>
</head>

<body ng-controller="LoginController">
<header class="login-header">
    <!--LOGO-->
    <img class="login-header__logo" src="../img/oddin_main_logo.png"/>
</header>
<main>
    <div class="container">
        <div class="row">
            <div class="offset-m2 offset-l3 col s12 m8 l6">
                <!--card do login-->
                <div class="card">
                    <div class="login-box">
                        <!-- Título -->
                        <h1 class="login-box__title">Login</h1>
                        <!-- Formulário -->
                        <form ng-submit="login()">
                            <div class="row">
                                <!-- Usuário -->
                                <div class="input-field col s12">
                                    <input id="user-email" type="text" required ng-model="user.email"/>
                                    <label for="user-email">Usuário</label>
                                </div>
                                <!-- Senha -->
                                <div class="input-field col s12">
                                    <input id="user-password" type="password" required ng-model="user.senha"/>
                                    <label for="user-password">Senha</label>
                                </div>
                            </div>
                            <!-- Opções -->
                            <div class="login-box__options">
                                <div class="row">
                                    <!-- Manter conectado -->
                                    <div class="col m6 s12">
                                        <p>
                                            <input id="user-persist" type="checkbox" class="filled-in"/>
                                            <label for="user-persist">Manter conectado</label>
                                        </p>
                                    </div>
                                    <!-- Recuperar Senha -->
                                    <div class="col m6 s12">
                                        <a href="#">Esqueci minha senha</a>
                                    </div>
                                </div>
                            </div>
                            <!-- Botão Submit -->
                            <button class="login-box__main-button btn waves-effect waves-light" type="submit" name="entrar">Entrar</button>
                        </form>
                        <!-- Fim formulario -->
                        <!-- Mensagem -->
                        <div>
                            <p class="login-box__message">mensagem login</p>
                        </div>
                        <!-- Fim Mensagem -->
                    </div>
                </div>
                <!-- fim do card -->
                <!-- info -->
                <p class="login-info">Lorem ipsum dolor sit amet &#169;</p>
            </div>
        </div>
    </div>
</main>
<!-- Fim do main -->
<script src="../vendor/jquery/dist/jquery.min.js"></script>
<script src="../vendor/Materialize/dist/js/materialize.min.js"></script>
<script src="../vendor/angular/angular.js"></script>
<script src="../vendor/angular-resource/angular-resource.js"></script>
<script src="../js/angular/auth.js"></script>
<script src="../js/angular/services/LoginService.js"></script>
<script src="../js/angular/controllers/LoginController.js"></script>
</body>
</html>